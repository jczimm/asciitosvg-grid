{
    "version": 2,
    "builds": [
      {
        "src": "server.js",
        "use": "@now/node",
        "config": { "maxLambdaSize": "50mb" }
      }
    ],
    "routes": [
      { "src": "/[\\s\\S]*", "dest": "/server.js" }
    ],
    "alias": "asciitosvg.now.sh",
    "env": {
        "IS_NOW": "true"
    },
    "build": {
        "env": {
            "NODE_ENV": "production"
        }
    }
  }