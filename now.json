{
    "version": 2,
    "builds": [
      {
        "src": "src/lambdas/*.js",
        "use": "@now/node",
        "config": { "maxLambdaSize": "50mb" }
      }
    ],
    "routes": [
      { "src": "/render/[\\s\\S]+", "dest": "/render.js" }
    ],
    "alias": "asciitosvg.now.sh",
    "env": {
      "IS_NOW": "true"
    },
    "build": {
        "env": {
          "NODE_ENV": "production"
        }
    }
  }